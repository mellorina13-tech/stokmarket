{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth",
      "methods": ["GET", "POST", "OPTIONS"],
      "dest": "/api/auth.js"
    },
    {
      "src": "/api/portfolio",
      "methods": ["GET", "POST", "OPTIONS"],
      "dest": "/api/portfolio.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url"
  }
}
